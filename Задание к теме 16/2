#include<iostream>
#include<locale>
#include <cmath>
using namespace std;
int main() {
setlocale(LC_ALL, "RUS");
int n, a, d, i;
cout << "Введите количество членов геометрической прогрессии - N: ";
cin >> n;
cout << "Введите первый член геометрической прогрессии - A: ";
cin >> a;
cout << "Введите знаменатель геометрической прогрессии - D: ";
cin >> d;
int arr[n];
for (int i = 0; i <= n-1; i++) {
            arr[i]=a*pow(d,i);
            cout << arr[i]<< "; ";
        }
}
