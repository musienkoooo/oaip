#include<iostream>
#include<locale>
using namespace std;
int main() {
	setlocale(LC_ALL, "RUS");
	int n, d;
	cout << "Введите год:" << endl;
	cin >> n;
	d = n % 10;
	if ((d == 0) || (d == 1)) {
		cout << " - год белого(-ой)";
	}
	if ((d == 2) || (d == 3)) {
		cout << " - год чёрного(-ой)";
	}
	if ((d == 4) || (d == 5)) {
		cout << " - год зелёного(-ой)";
	}
	if ((d == 6) || (d == 7)) {
		cout << " - год красного(-ой)";
	}
	if ((d == 8) || (d == 9)) {
		cout << " - год жёлтого(-ой)";
	}

	if (n % 12 == 4) {
		cout << " крысы";
	}
	if (n % 12 == 5) {
		cout << " быка";
	}
	if (n % 12 == 6) {
		cout << " тигра";
	}
	if (n % 12 == 7) {
		cout << " кролика";
	}
	if (n % 12 == 8) {
		cout << " дракона";
	}
	if (n % 12 == 9) {
		cout << " змея";
	}
	if (n % 12 == 10) {
		cout << " лошади";
	}
	if (n % 12 == 11) {
		cout << " овцы";
	}
	if (n % 12 == 0) {
		cout << " обезьяны";
	}
	if (n % 12 == 1) {
		cout << " петуха";
	}
	if (n % 12 == 2) {
		cout << " собаки";
	}
	if (n % 12 == 3) {
		cout << " свиньи";
	}
}
