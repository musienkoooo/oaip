#include <iostream>
#include <math.h>
using namespace std;

int main()
{
   setlocale(LC_ALL, "Russian");
   int x1, y1, x2, y2, a, b, S, P;//a и b-длины сторон прямоугольника, S-его площадь, P-периметр
   cout << "x1=";
   cin >> x1;
   cout << "y1=";
   cin >> y1;
   cout << "x2=";
   cin >> x2; 
   cout << "y2=";
   cin >> y2;
   a=abs(x2-x1);
   b=abs(y2-y1);
   cout << "Стороны прямоугольника = " << a << ", " << b;
   S=a*b;
   P=2*(a+b);
   cout << "\nПлощадь=" << S << "\nПериметр=" << P;
    return 0;
}
