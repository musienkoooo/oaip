#include <iostream>
#include <math.h>
using namespace std;

int main()
{
   setlocale(LC_ALL, "Russian");
   int a, b, c, ac, bc, p;//ac-расстояние от А до С; bc - от B до C; p-произведение длин этих отрезков
   cout << "A=";
   cin >> a;
   cout << "B=";
   cin >> b;
   cout << "C=";
   cin >> c;
   ac=abs(c-a);
   bc=abs(c-b);
   cout << "AC=" << ac;
   cout << "\nBC=" << bc;
   p=ac*bc;
   cout << "\nПроизведение длин отрезков AC и BC = " << p;
    return 0;
}
